.PHONY: all

CC = gcc 		#the compiler to use
SRC = main.c school.c   #the file source
OBJ = $(SRC:.c=.o)	#the object files
NAME = school		#the name of the executable
RM = rm -f			#program to delete file


all: 	$(NAME)

$(NAME): $(OBJ)
	 ${CC} ${OBJ} -o $(NAME)

%.o:	%.c
	$(CC) -c -o $@ $<

clean: 
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean:
	$(RM) *~ $(NAME) $(OBJ)

re: oclean all
